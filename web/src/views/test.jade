html(lang='en')
  head
    // Angular Material style sheet
    link(rel='stylesheet', href='http://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.css')
    link(rel='stylesheet', href='http://cdn.leafletjs.com/leaflet/v1.0.0-beta.2/leaflet.css')
    link(rel='stylesheet', href='stylesheets/material.css')
    link(rel='stylesheet', href='stylesheets/style.css')
  body(ng-app='app')

    #map

    div(id='fab', ng-controller='FabCtrl as demo', ng-cloak='')
      md-fab-speed-dial(id='options', md-open='demo.isOpen', md-direction='{{demo.selectedDirection}}', ng-class='demo.selectedMode', md-theme='altTheme')
        md-fab-trigger
          md-button.md-fab.md-primary(aria-label='menu')
            md-icon(md-svg-src='images/mosquito.svg')
        md-fab-actions
          md-button.md-fab.md-raised.md-mini.md-accent(aria-label='Twitter')
            md-icon(md-svg-src='images/mosquito.svg', aria-label='Twitter')
          md-button.md-fab.md-raised.md-mini.md-warn(aria-label='Facebook')
            md-icon(md-svg-src='images/mosquito.svg', aria-label='Facebook')
          md-button.md-fab.md-raised.md-mini(aria-label='Google Hangout')
            md-icon(md-svg-src='images/mosquito.svg', aria-label='Google Hangout')

    // Angular Material requires Angular.js Libraries
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-aria.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-messages.min.js')
    
    // Angular Material Library
    script(src='http://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js')
    
    // Leaftlet
    script(src='http://cdn.leafletjs.com/leaflet/v1.0.0-beta.2/leaflet.js')
    script(src='http://cdn.jsdelivr.net/leaflet.esri/2.0.0-beta.7/esri-leaflet.js')
    
    // Your application bootstrap
    script(src='scripts/test.js')
      
